<h1>What type of student are you?</h1>

<%= form_tag url_for, method: :get do %>
  <p>
    <%= label_tag do %>
      <%= radio_button_tag :response, 'uk-student-full-time' %>
      UK student full-time
    <% end %>
  </p>

  <p>
    <%= label_tag do %>
      <%= radio_button_tag :response, 'uk-student-part-time' %>
      UK student part-time
    <% end %>
  </p>

  <p>
    <%= label_tag do %>
      <%= radio_button_tag :response, 'eu-student-full-time' %>
      EU student full-time
    <% end %>
  </p>

  <p>
    <%= label_tag do %>
      <%= radio_button_tag :response, 'eu-student-part-time' %>
      EU student part-time
    <% end %>
  </p>

  <p>
    <%= submit_tag 'Next question' %>
  </p>
<% end %>
